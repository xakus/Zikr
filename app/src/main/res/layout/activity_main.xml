<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.zikr.murad.zikr.view.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@drawable/tasbih2"
        android:contentDescription="@string/bgImage"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/tv_salam1"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_salam"
        android:contentDescription="@string/Salam"
        android:fontFamily="cursive"
        android:lineSpacingExtra="8sp"
        android:text="Assalamaleykum"
        android:textAlignment="center"
        android:textColor="@color/colorSalam"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        tools:text="@string/salam1" />

    <TextView
        android:id="@+id/tv_salam2"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_salam"
        android:contentDescription="@string/Salam"
        android:fontFamily="cursive"
        android:lineSpacingExtra="8sp"
        android:text="va rahmatullahi"
        android:textAlignment="center"
        android:textColor="@color/colorSalam"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_salam1"
        tools:text="@string/salam2" />

    <TextView
        android:id="@+id/tv_salam3"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_salam"
        android:backgroundTintMode="src_over"
        android:contentDescription="@string/Salam"
        android:fontFamily="cursive"
        android:lineSpacingExtra="36sp"
        android:text="va barakatuhu"
        android:textAlignment="center"
        android:textColor="@color/colorSalam"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_salam2"
        tools:text="@string/salam3" />
</android.support.constraint.ConstraintLayout>
